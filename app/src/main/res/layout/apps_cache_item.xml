<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            app:layout_constraintEnd_toStartOf="@+id/secondLay"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/firstLayWithImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/appIcon"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/appicon"
                android:layout_width="@dimen/_25sdp"
                android:scaleType="fitXY"
                android:layout_height="@dimen/_25sdp" />

            <TextView
                android:layout_width="0sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/appIcon"
                app:layout_constraintTop_toTopOf="@+id/appIcon"
                app:layout_constraintBottom_toBottomOf="@+id/appIcon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/mons_medium"
                android:id="@+id/appName"
                android:text="S"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintStart_toEndOf="@+id/firstLayWithImage"
            android:id="@+id/secondLay"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="@+id/image_selected_icon"
                app:layout_constraintBottom_toBottomOf="@+id/image_selected_icon"
                android:gravity="end"
                app:layout_constraintEnd_toStartOf="@+id/image_selected_icon"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/mons_medium"
                android:id="@+id/sizeInMbApp"
                android:text=""
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_12sdp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/image_selected_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/check_circle"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>